{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Try switching from 'bundler' to 'node'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Update JSX setting
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"],
      "@types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src/*",
    ".storybook",
    "stories",
    ".next/types/**/*.ts",
    "types", // Include the root-level types folder
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
